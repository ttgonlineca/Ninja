  "name": "Invoice Ninja v5 (TTG Octane)",
  "author": "stuff@ttgonline.ca",
  "description": "Invoice Ninja v5 (Octane/FrankenPHP) TTG image that keeps all writable data in /home/container (portable across nodes). Start Redis first. Use LARAVEL_ROLE=app for web, worker for queues.",
  "features": [],
  "docker_images": {
    "Invoice Ninja (TTG) - latest": "ghcr.io/ttgonlineca/invoiceninja-ptero:latest"
  },
  "file_denylist": [],
  "startup": "/bin/sh -lc 'exec /usr/local/bin/ttg-entrypoint.sh'",
  "config": {
    "files": "{}",
    "startup": "{}",
    "logs": "{}",
    "stop": "SIGTERM"
  },
  "scripts": {
    "installation": {
      "script": "#!/bin/sh\nexit 0\n",
      "container": "alpine:3.19",
      "entrypoint": "sh"
    }
  },
  "variables": [
    {
      "name": "Laravel Role",
      "description": "app=web UI, worker=background jobs, scheduler=cron loop",
      "env_variable": "LARAVEL_ROLE",
      "default_value": "app",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|in:app,worker,scheduler"
    },
    {
      "name": "APP_ENV",
      "description": "production",
      "env_variable": "APP_ENV",
      "default_value": "production",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:32"
    },
    {
      "name": "APP_DEBUG",
      "description": "false",
      "env_variable": "APP_DEBUG",
      "default_value": "false",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|in:true,false,0,1"
    },
    {
      "name": "APP_URL",
      "description": "Public URL (ex: https://website.com)",
